<Window x:Class="Kettunen.BMICalculator.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Kettunen.BMICalculator.WPFClient"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="BMI Calculator"
        Width="400"
        Height="500"
        Background="#0A0D22"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="Weight (kg)" />
            <TextBox Name="WeightInput"
                     Grid.Row="1"
                     d:Text="123" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="Height (cm)" />
            <TextBox Name="HeightInput"
                     Grid.Row="1"
                     d:Text="456" />
        </Grid>

        <Button Grid.Row="2"
                Click="Button_Click"
                Content="Calculate" />

    </Grid>
</Window>
